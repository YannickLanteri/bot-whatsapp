{
  "name": "bot-whatsapp",
  "version": "2.0.0",
  "description": "WhatsApp bot with Gemini AI integration for voice message transcription",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch & nodemon dist/index.js",
    "dev:ts": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "gemini",
    "ai",
    "voice",
    "transcription",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.0.0",
    "dotenv": "^16.4.5",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.34.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/qrcode-terminal": "^0.12.0",
    "@vitest/coverage-v8": "^4.0.18",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
